@model IEnumerable<Claims_System.Models.ApplicationUser>
@{
    ViewData["Title"] = "Users List";
}
<a asp-controller="Home" asp-action="HRDashboard" class="btn btn-secondary mb-3">
    Back to Home
</a>

<h1>Users List</h1>
<a asp-action="CreateUser" class="btn btn-success mb-3">Add New User</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@(ViewBag.UserRoles[user.Id] ?? "N/A")</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger ms-1">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
