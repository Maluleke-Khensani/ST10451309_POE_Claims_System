@model Claims_System.Models.LecturerClaim
@{
    ViewData["Title"] = "Review Claim";
    ViewData["ControllerName"] = "Manager";
}

<a asp-controller="Manager" asp-action="Index" class="btn btn-secondary mb-3">
    Back to Home
</a>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4 mb-0">Claim Details</h2>

        <a class="btn"
           href="/Manager"
           style="background-color:#8DBCC7; color:#000;">
            ← Back to Dashboard
        </a>
    </div>

    <div class="row g-4">

        <!-- LEFT SIDE -->
        <div class="col-lg-8">

            <!-- Lecturer Info -->
            <div class="card">
                <div class="card-header">Lecturer Information</div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Employee ID</dt>
                        <dd class="col-sm-8">@Model.UserId</dd>

                        <dt class="col-sm-4">Lecturer</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@Model.ModuleName</dd>

                        <dt class="col-sm-4">Month</dt>
                        <dd class="col-sm-8">@Model.Month</dd>

                        <dt class="col-sm-4">Submitted</dt>
                        <dd class="col-sm-8">@Model.Submitted</dd>
                    </dl>
                </div>
            </div>

            <!-- Claim Summary -->
            <div class="card mt-4">
                <div class="card-header">Claim Summary</div>
                <div class="card-body">
                    <table class="table table-sm" style="background-color:#fff;">
                        <thead>
                            <tr>
                                <th>Hours Worked</th>
                                <th>Rate</th>
                                <th>Total</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td>@Model.HoursWorked</td>
                                <td>R @Model.Rate</td>
                                <td>R @Model.Total.ToString("N2")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Supporting Documents -->
            <div class="card mt-4">
                <div class="card-header">Supporting Documents</div>
                <div class="card-body">

                    @if (!string.IsNullOrEmpty(Model.Document1FileName))
                    {
                        <div class="mb-3">
                            <h6>@Model.Document1FileName</h6>

                            <div class="d-flex gap-2">

                                <button class="btn"
                                        style="background-color:#A4CCD9; color:#000;"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#previewDoc1">
                                    Preview
                                </button>

                                <a class="btn"
                                   style="background-color:#C4E1E6; color:#000;"
                                   asp-controller="Manager"
                                   asp-action="DownloadDocument1"
                                   asp-route-claimId="@Model.ClaimId">
                                    Download
                                </a>

                            </div>

                            <div class="collapse mt-3" id="previewDoc1">
                                <iframe src="@Url.Action("PreviewDocument", "Manager",
                                                                            new { claimId = Model.ClaimId, docNumber = 1 })"
                                    width="100%" height="500px"
                                    class="border rounded"></iframe>
                        </div>

                        </div>
                                        }

                </div>
            </div>

        </div>

        <!-- RIGHT SIDE -->
        <div class="col-lg-4">

            <div class="card">
                <div class="card-header">Claim Status</div>

                <div class="card-body">

                    <p><strong>Manager Status:</strong> @Model.ManagerStatus</p>
                    <p><strong>Total Amount:</strong> R @Model.Total.ToString("N2")</p>

                    <div class="mt-3">

                        @if (!User.IsInRole("HR"))
                        {
                            <form asp-action="Approve">
                                <input type="hidden" name="claimId" value="@Model.ClaimId" />

                                <button class="btn"
                                        style="background-color:#8DBCC7; color:#000;">
                                    Approve
                                </button>
                            </form>

                            <form asp-action="Reject" class="mt-2">
                                <input type="hidden" name="claimId" value="@Model.ClaimId" />

                                <button class="btn"
                                        style="background-color:#EBFFD8; color:#000;">
                                    Reject
                                </button>
                            </form>
                        }

                    </div>

                </div>
            </div>

        </div>

    </div>

</div>

@section Scripts {
    <script>
                const confirmModal = document.getElementById('confirmModal');
        confirmModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const action = button.getAttribute('data-action');
            const claimId = "@Model.ClaimId";

            document.getElementById('modalActionName').textContent =
                action.charAt(0).toUpperCase() + action.slice(1);

            const form = document.getElementById('confirmForm');
            const controller = "@ViewData["ControllerName"]";
            const method = action === "approve" ? "ApproveClaim" : "RejectClaim";

            form.action = '/' + controller + '/' + method + '?claimId=' + claimId;
        });

    </script>
}
