<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Claims_System</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Claims_System.styles.css" asp-append-version="true" />

    <style>
        /* Red, White, Black Theme */
        :root {
            --primary-red: darkred;
            --button1: #F1F3E0;
            --button2: #D2DCB6;
            --button3: #A1BC98;
            --button4: #778873;
        }

        body {
            background-color: #ffffff; /* page background white */
            color: #000;
            font-family: 'Poppins', sans-serif;
        }

        /* Navbar */
        .navbar {
            background-color: darkred; /* header red */
            color: #fff;
        }

        .navbar .nav-link {
            color: #fff !important;
        }

        .navbar .nav-link:hover {
            color: #000 !important;
        }

        /* Cards */
        .card {
            background-color: #fff;
            border: 2px solid var(--primary-red);
            border-radius: 10px;
        }

        .card-header {
            background-color: #fff;
            color: #000;
            font-weight: 600;
        }

        /* Tables */
        table {
            background-color: #fff;
        }

        thead {
            background-color: var(--primary-red);
            color: #fff;
        }

        tbody tr:hover {
            background-color: #F1F3E0;
        }

        /* Buttons */
        .btn-button1 { background-color: var(--button1); color: #000; }
        .btn-button2 { background-color: var(--button2); color: #000; }
        .btn-button3 { background-color: var(--button3); color: #fff; }
        .btn-button4 { background-color: var(--button4); color: #fff; }
        .btn-red-outline { border: 2px solid var(--primary-red); color: var(--primary-red); background-color: #fff; }
        .btn-red-outline:hover { background-color: var(--primary-red); color: #fff; }

        /* Branding */
        .brand .logo-svg { border: 2px solid var(--primary-red); background-color: #fff; }
        .brand-subtext { font-size: 12px; color: #000; }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <div class="d-flex align-items-center brand me-auto">
                    <div class="logo-wrap me-2">
                        <svg class="logo-svg" viewBox="0 0 64 64" width="40" height="40">
                            <rect x="20" y="16" width="24" height="26" rx="4" fill="#BF092F" />
                            <rect x="26" y="6" width="4" height="8" rx="1" fill="#BF092F" />
                            <rect x="34" y="6" width="4" height="8" rx="1" fill="#BF092F" />
                            <path d="M 18 44 q 14 12 28 0" stroke="#BF092F" stroke-width="3" fill="none" stroke-linecap="round" />
                        </svg>
                    </div>
                    <div class="d-flex flex-column">
                        <div class="brand-subtext">IIB MSA Contract Monthly Claim System</div>
                    </div>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link" style="text-decoration:none;">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
