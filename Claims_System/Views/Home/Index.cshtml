@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="container text-center py-5 rounded-4 shadow-sm hero-box mb-5">
    <h1 class="display-4 fw-bold mb-3 text-dark">Claims Management System</h1>
    <p class="lead mb-0 text-secondary">
        Easily manage, submit, verify, and approve lecturer claims with speed and accuracy.
    </p>


    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-dark btn-lg fw-bold px-4">
        Login
    </a>
</div>

<!-- Quick Links Section -->
<div class="container text-center py-5">
    <h4 class="fw-bold text-dark mb-3">Quick Navigation</h4>
    <p class="text-secondary mb-4">Jump straight into your dashboard after logging in.</p>

    <div class="d-flex justify-content-center gap-3 flex-wrap">

        <a class="btn dashboard-btn px-4 py-2 rounded-pill"
           asp-area="Identity" asp-page="/Account/Login">
            Lecturer Dashboard
        </a>

        <a class="btn dashboard-btn px-4 py-2 rounded-pill"
           asp-area="Identity" asp-page="/Account/Login">
            Coordinator Dashboard
        </a>

        <a class="btn dashboard-btn px-4 py-2 rounded-pill"
           asp-area="Identity" asp-page="/Account/Login">
            Manager Dashboard
        </a>

        <a class="btn dashboard-btn px-4 py-2 rounded-pill"
           asp-area="Identity" asp-page="/Account/Login">
            HR Dashboard
        </a>
    </div>
</div>


<!-- Features Section -->
<div class="container py-5">
    <div class="row text-center g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow feature-card">
                <div class="card-body">
                    <i class="bi bi-pencil-square fs-1 text-dark mb-3"></i>
                    <h5 class="card-title fw-bold">Submit Claims</h5>
                    <p class="card-text text-secondary">
                        Lecturers can easily create and submit claims for approval.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow feature-card">
                <div class="card-body">
                    <i class="bi bi-check2-circle fs-1 text-dark mb-3"></i>
                    <h5 class="card-title fw-bold">Verify & Approve</h5>
                    <p class="card-text text-secondary">
                        Coordinators and managers can review, approve, or reject claims efficiently.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow feature-card">
                <div class="card-body">
                    <i class="bi bi-bar-chart-line fs-1 text-dark mb-3"></i>
                    <h5 class="card-title fw-bold">Track Progress</h5>
                    <p class="card-text text-secondary">
                        Monitor claim status in real-time with clear dashboards and notifications.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    /* White hero block with red border */
    .hero-box {
        background: #ffffff;
        border: 3px solid #BF092F;
    }

    /* Navy button */
    .dashboard-btn {
        background-color: #0A2A43; /* dark navy */
        color: #fff;
        font-weight: 600;
        border: none;
        transition: 0.2s ease-in-out;
    }

        .dashboard-btn:hover {
            background-color: #123A5A;
            color: #fff;
        }

    /* Pop-out feature cards */
    .feature-card {
        transition: 0.2s;
        border-radius: 12px;
    }

        .feature-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }
</style>